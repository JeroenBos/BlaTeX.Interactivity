{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Tests",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/node_modules/tsdx/dist/index.js",
            "args": [
                "test",
                "--silent=false",
                "--verbose",
                "-o",
                "overlay" // matches files, not 'describe', not to 'it'
            ],
            "resolveSourceMapLocations": [
                "${workspaceFolder}/**",
                "!**/node_modules/**"
            ],
            "outputCapture": "std",
            "justMyCode": true
        }
    ]
}
