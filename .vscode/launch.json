{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Tests",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/node_modules/dts-cli/dist/index.js",
            "args": [
                "test",
                "--silent=false",
                "--verbose",
                "--maxWorkers",
                "1", // jest spawn tens of useless processes no clue why
                "--testNamePattern",
                "x to the 2" // regex against describe + it
            ],
            "resolveSourceMapLocations": [
                "${workspaceFolder}/**",
                "!**/node_modules/**"
            ],
            "env": {
                "DEBUG": "true"
            },
            "outputCapture": "std",
            "justMyCode": true
        }
    ]
}
